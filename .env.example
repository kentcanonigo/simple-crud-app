# Database Configuration
# Choose database type: 'sqlite' or 'mysql'
DATABASE_TYPE=sqlite

# SQLite settings (when DATABASE_TYPE=sqlite)
SQLITE_FILE=todos.db

# MySQL settings (when DATABASE_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=todoapp
MYSQL_PASSWORD=todoapp123
MYSQL_DATABASE=todoapp

# Alternative: Use full database URL (overrides DATABASE_TYPE and above settings)
# DATABASE_URL=sqlite:///todos.db
# DATABASE_URL=mysql+pymysql://user:password@host:port/database

# Flask Configuration
FLASK_ENV=development
PORT=5000

# Splunk Configuration (optional)
# SPLUNK_HEC_URL=https://your-splunk-instance.com:8088
# SPLUNK_HEC_TOKEN=your-hec-token-here
# SPLUNK_INDEX=main
# SPLUNK_SOURCE=todoapp
# SPLUNK_VERIFY_SSL=true

# Production examples:
# DATABASE_TYPE=mysql
# FLASK_ENV=production
# DATABASE_URL=mysql+pymysql://prod_user:secure_password@mysql-server:3306/todoapp_prod
# SPLUNK_HEC_URL=https://prod-splunk.company.com:8088
# SPLUNK_HEC_TOKEN=prod-hec-token
# SPLUNK_INDEX=production